<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <ruleref uri="#simple"/>
      </item>
      <item>
        <ruleref uri="#pose"/>
      </item>
      <item>
        <ruleref uri="#action"/>
      </item>
    </one-of>
  </rule>

  <rule id="simple">
    <tag> out.type="simple";</tag>
    <one-of>
      <item>
        <tag>out.command="recording";</tag>
        <one-of>
          <item> record </item>
          <item> recording </item>
        </one-of>
      </item>
      <item>
        <tag>out.command="stoprecording";</tag>
        <one-of>
          <item> stop </item>
          <item> stop recording </item>
        </one-of>
      </item>
      <item>
        <tag>out.command="show";</tag>
        <one-of>
          <item> show me </item>
          <item> show me how </item>
          <item> show </item>
        </one-of>
      </item>
      <item>
        <tag>out.command="hide";</tag>
        <one-of>
          <item> hide </item>
          <item> got it </item>
        </one-of>
      </item>
      <item>
        <tag>out.command="again";</tag>
        <one-of>
          <item> redo </item>
          <item> once more </item>
        </one-of>
      </item>
      <item>
        <tag>out.command="clear";</tag>
        <one-of>
          <item> clear all </item>
        </one-of>
      </item>
    </one-of>
  </rule>
  
  <rule id="pose">
    <item> check my </item>
    <ruleref uri="#poses" />
    <tag> out.type="pose"; out.pose=rules.latest(); </tag>
  </rule>

  <rule id="poses">
    <one-of>
      <item>ready</item>
      <item>extension</item>
      <item>lunge</item>
    </one-of>
  </rule>

  <rule id="action">
    <item> watch my </item>
    <ruleref uri="#actions"/>
    <tag>out.type="action"; out.action=rules.latest(); </tag>
  </rule>

  <rule id="actions">
    <one-of>
      <item>advance</item>
      <item>retreat</item>
      <item>lunge</item>
    </one-of>
  </rule>
</grammar>