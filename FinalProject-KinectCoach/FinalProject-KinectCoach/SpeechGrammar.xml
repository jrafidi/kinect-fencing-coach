<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <tag>RECORD</tag>
        <one-of>
          <item> record </item>
          <item> recording </item>
          <item> start recording </item>
        </one-of>
      </item>
      <item>
        <tag>STOPREC</tag>
        <one-of>
          <item> stop </item>
          <item> stop recording </item>
        </one-of>
      </item>
    </one-of>
  </rule>
</grammar>