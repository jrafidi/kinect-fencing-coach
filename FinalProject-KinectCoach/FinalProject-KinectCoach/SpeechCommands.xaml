<Window x:Class="FinalProject_KinectCoach.SpeechCommands"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speech Commands" Height="450" Width="700"
        Loaded="WindowLoaded">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e"/>
    </Window.Resources>
    <Grid Margin="10 0 5 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="0 0 0 5">
            <TextBlock DockPanel.Dock="Left"  Margin="0 0 -1 0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="{StaticResource MediumGreyBrush}" FontFamily="Segoe UI" FontSize="16">Kinect Coach Speech Commands</TextBlock>

        </DockPanel>
        <ScrollViewer Grid.Row="1">
            <TextBlock FontSize="14" Name="HelpText">
            </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
